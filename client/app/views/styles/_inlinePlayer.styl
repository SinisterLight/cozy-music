/* SoundManager 2: In-page MP3 player example */

image_dir = "../images"

ul
  &.flat
    list-style-type none
    padding-left 0px
    li
      a
        display inline-block
        padding 2px 4px 2px 4px
    a
      &.sm2_link
        border-left 6px solid #999
        padding-left 4px
        padding-right 4px
        &:hover
          border-left-color #333
      &.sm2_playing
        border-left-color #6666ff
        background-color #000
        color #fff
        text-decoration none
        &:hover
          border-left-color #cc3333
      &.sm2_paused
        background-color #666
        color #fff
        text-decoration none
        &:hover
          border-left-color #33cc33
  &.graphic
    list-style-type none
    padding-left 0px
    margin-left 0px
    list-style-type none
    margin 0px
    padding 0px
    li
      margin-bottom 2px
      a
        &.sm2_link
          -webkit-transition-property hover
          -webkit-transition background-color 0.15s linear
          -moz-transition background-color 0.15s linear 0s
          -o-transition-property background-color
          -o-transition-duration 0.15s
          &:hover
            background-color #003366
            color #fff
        &.sm2_paused
          background-color #999
          &:hover
            background #003366 url(image_dir/icon_play.png) no-repeat 3px 50%
            _background-image url(image_dir/icon_play.gif)

ul.flat li,
ul.graphic li
  padding-bottom 1px

ul.graphic li a,
ul.graphic li a.sm2_link
  display inline-block
  padding-left 22px
  min-height 16px
  vertical-align middle
  background-color #336699
  border-radius 3px
  padding 3px 3px 3px 25px
  min-width 19em
  _width 19em
  text-decoration none
  font-weight normal
  color #f6f9ff

ul.graphic li a, 
ul.graphic li a.sm2_paused:hover,
ul.graphic li a.sm2_link:hover
  background-image url(image_dir/icon_play.png)
  background-position 3px 50%
  background-repeat no-repeat
  _background-image url(image_dir/icon_play.gif)

ul.graphic li a.sm2_playing,
ul.graphic li a.sm2_playing:hover
  background #003366 url(image_dir/icon_pause.png) no-repeat 3px 50%
  _background-image url(image_dir/icon_pause.gif)
  text-decoration none

body #sm2-container object,
body #sm2-container embed
  left -9999em
  top -9999em