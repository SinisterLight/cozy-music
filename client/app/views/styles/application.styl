// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
@import 'nib'

// Base Styles

*
  box-sizing: border-box

body
    text-rendering optimizeLegibility

body,
input
    color #444
    font 300 16px Geneva, Verdana, "Lucida Sans", "Lucida Grande", "Lucida Sans Unicode", sans-serif
    line-height 1.2

@import 'player'

title-width = 200px
field-width = 150px
num-width = 30px

body
    background-color: #eee

div.uploader
    transition: all 1.5s ease
    background-color: #444
    color: #fff
    padding: 5px
    font-weight: bold
    height: 100%
    width: 100%
    cursor:pointer

    &.dragover
        background-color: #f00

    table
        width: 100%

    #h1
        text-align: left
        font-size: 1.8em
    #h2
        text-align: right
        font-size: 1.2em

#content
    padding: 30px
    width: 750px
    background-color: #fff
    margin: auto auto
    text-align: center
    border:1px solid #ddd

    #tracks-display
        .viewport
            width: 100%
            height: 450px
            overflow: hidden
            position: relative

        table
            margin auto
            width: 95%
            border:1px solid #aaa
            thead
                color: #f00
                border:1px solid #aaa
                th
                    &.left
                        width: 60px
                    &.right
                        width: 30px
                    &.field
                        cursor: pointer
                        width: field-width
                        text-align: left
                        font-weight: bold
                        &.title
                            width: title-width
                        &.num
                            width: num-width

                        .sortArrow
                            display: inline-block
                            margin-left: 10px
                            padding: 5px
                            width: 14px
                            height: 14px
                            background-image: url("../images/glyphicons-halflings.png")
                            &:hover
                                background-image: url("../images/glyphicons-halflings-red.png")
                            &.up
                                background-position: -287px -119px
                            &.down
                                background-position: -312px -118px

            tbody
                tr.track
                    background-color: #fff
                    color: #444
                    height: 30px
                    transition: all 0.3s ease

                    &.odd
                        background-color: #eee


                    &.selected
                        background-color: #c8c8c8

                    &:hover
                        background-color: #444
                        color: #fff
                        .button
                            display: inline-block
                        .uploadProgress
                            color: white

                    .button
                        display: none

                    .field
                        text-align: left
                        font-weight: bold
                        font-size: 0.8em
                        overflow: ellipsis
                        max-width: field-width
                        &.num
                            max-width: num-width
                        &.title
                            max-width: title-width

                        .info
                            display: none

                        &:hover .info
                            display: block
                            position: absolute
                            background-color: #666
                            color: #fff
                            padding: 5px

                    .uploadProgress
                        color: red
                        font-weight: bold
                        font-size: 0.8em
                        display: block
                        animation-name: dropText
                        animation-duration: 0.1s
                        animation-iteration-count: 1

@keyframes dropText
    from{transform:scale(1.3);}
    to{transform:scale(1);}
