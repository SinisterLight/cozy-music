/*
Da damn bear-killer player style
*/

.player
    background-color: #444
    margin:10 10px
    padding: 10px
    border:1px solid #222
    border-radius: 4px

    .volume
        display:inline-block
        vertical-align:middle
        margin:0 10px
        width: 100px
        height:20px
        cursor:pointer

        .volume-switch
            width: 24px
            height: 20px
            display:inline-block
            top:0px
            left:0px
            position:relative
            background-image: url("../images/glyphicons-halflings-white.png")
            background-position: -405px 138px
            &.mute
                background-position: -357px 138px

        .slider
            width: 75%
            height: 100%
            display:inline-block

            .slider-container
                width:100%
                height:50%
                border:1px solid #222
                border-radius: 7px
                top:25%
                left: 0%
                position:relative
                background: linear-gradient(top, #fff, #eee)

                .slider-inner
                    height:100%
                    border-radius: 7px
                    top:0px
                    left:0px
                    position:absolute
                    background: linear-gradient(top, #eee, #aaa)

                    .slider-handle
                        width: 16px
                        height: 15px
                        border:1px solid #444
                        border-radius: 7px
                        top: -40%
                        right: -9px
                        position:absolute
                        background: linear-gradient(top left, #eee, #aaa)

                        &:active
                            background: linear-gradient(top left, #aaa, #eee)

    .button
        display:inline-block
        vertical-align:middle
        margin:0 5px
        border:2px solid #bbb
        background-color: #ccc
        background-image: url("../images/glyphicons-halflings.png")
        cursor:pointer
        &:hover
            background-image: url("../images/glyphicons-halflings-white.png")
        &:active
            border:2px solid #ccc
            background-color: #bbb
        &.play
            width: 32px
            height: 32px
            border-radius: 16px
            background-position: -280px 94px
            &.paused
                background-position: -256px 94px
            &.stopped
                background-position: -256px 94px
            &.unPlayable
                border:2px solid #b00
                background-color: #c00
                background-position: -137px 45px
        &.rwd
            width: 24px
            height: 24px
            border-radius: 12px
            background-position: -239px 90px
        &.fwd
            width: 24px
            height: 24px
            border-radius: 12px
            background-position: -331px 90px

    .progress
        display:inline-block
        vertical-align:middle
        margin:0 10px
        width: 40%
        height:20px
        cursor:pointer
        background-color: white
        .inner
            height: 100%
            background: linear-gradient(left, #eee, #aaa)
    .time
        display:inline-block
        vertical-align:middle
        color: white
        &.left
            margin-left: 20px
        &.right
            margin-right: 20px
